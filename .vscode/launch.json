    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug: gihex-widget",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=gihex-widget"
                ],
                "filter": {
                    "name": "gihex-widget",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "example: gihex_gauge_bar",
            "cargo": {
                "args": [
                    "build",
                    "--example=gihex_gauge_bar",
                    "--package=gihex-widget"
                ],
                "filter": {
                    "name": "gihex_gauge_bar",
                    "kind": "example"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}